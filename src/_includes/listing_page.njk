---
layout: base.njk
featured_image:
  path: "./src/images/questionmark_placeholder.jpeg"
  alt: "This is a placeholder for now"
  sizes: "600"
---


<article>
  <div class="md:my-20 px-20 flex flex-col-reverse md:flex-row text-center items-center md:justify-evenly">
    <div class="md:w-2/3 w-64 md:pr-20 text-center md:align-middle">
      <h1 class="text-2xl my-3">{{title_heading | safe }}</h1>
      <p class="my-3 text-justify">{{ title_text | safe }}</p>
    </div>
    <div class="md:w-1/3 w-64">
      {% image featured_image.path, { alt: featured_image.alt, class: "rounded-full", sizes: featured_image.sizes }%}
    </div>
  </div>
  <div class="px-20">
    {{content | safe}}
  </div>
</article>
