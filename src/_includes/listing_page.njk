<article>
  <div class="my-20 px-20 flex flex-row items-center justify-evenly">
    <div class="w-2/3 pr-20 text-center align-middle">
      <h1 class="text-2xl my-3">{{title_heading | safe }}</h1>
      <p class="my-3 text-justify">{{ title_text | safe }}</p>
    </div>
    <div class="w-1/3 bg-white">
      {% image featured_image.path, { alt: featured_image.alt, class: "rounded-full", sizes: featured_image.sizes }%}
    </div>
  </div>
  <div class="px-20">
    {{content | safe}}
  </div>
</article>
